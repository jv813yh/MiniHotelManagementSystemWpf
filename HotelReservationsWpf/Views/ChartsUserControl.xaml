<UserControl x:Class="HotelReservationsWpf.Views.ChartsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelReservationsWpf.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid>

        <lvc:CartesianChart>
            <lvc:CartesianChart.Series>
                <lvc:ColumnSeries Title="Overview of rooms" 
                                  Values="{Binding RoomSeries}" />
            </lvc:CartesianChart.Series>


            <lvc:CartesianChart.AxisX>
            <lvc:Axis Title="Type of rooms" 
                  Margin="10"
                  FontSize="15"
                  Labels="{Binding RoomTypeString}"
                  Foreground="#000103">
                <lvc:Axis.Separator>
                    <lvc:Separator Step="1"/>
                </lvc:Axis.Separator>
            </lvc:Axis>
            </lvc:CartesianChart.AxisX>


        </lvc:CartesianChart>
            
    </Grid>
</UserControl>
